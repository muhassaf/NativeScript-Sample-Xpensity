<Page xmlns="http://www.nativescript.org/tns.xsd" loaded="pageLoaded">
  <GridLayout>
    <ScrollView>
      <StackLayout>
        <TextField text="{{ name }}" hint="name" cssClass="firstTextField" />
        <TextField text="{{ email }}" keyboardType="email" autocorrect="false" autocapitalizationType="none" hint="username" />
        <TextField text="{{ password }}" secure="true" hint="password" />
        <TextField text="{{ confirmPassword }}" secure="true" hint="confirm password" />

        <Button text="SIGN UP" tap="{{ signUp }}" cssClass="primaryButton" />
      </StackLayout>
    </ScrollView>

    <ActivityIndicator busy="{{ isLoading }}" />
  </GridLayout>
</Page>